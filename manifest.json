{
    "manifest_version": 3,
    "name": "Nabe Reloader",
    "version": "1.0.0",
    "description": "Nabe Reloader",
    "author": "nabetan@gmail.com",
    "homepage_url": "https://github.com/nabereloader",
    "version_name": "first release",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "impl/popup.html",
        "default_icon": "impl/icon.png"
    },
    "background": {
        "service_worker": "impl/background.js"
    }
}