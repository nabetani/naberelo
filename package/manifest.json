{
    "manifest_version": 3,
    "name": "Nabe Reloader",
    "version": "1.0.0",
    "description": "Nabe Reloader",
    "author": "nabetani.takenori@gmail.com",
    "homepage_url": "https://github.com/nabetani/naberelo",
    "version_name": "first release",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "64": "icon64.png",
        "128": "icon128.png",
        "512": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}